mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`images/${path}`) class=className)

- var nav = [{url: '#header', title: 'Главная'}, {url: '#info-block', title: 'Обо мне'}, {url: '#my-skills', title: 'Навыки'}, {url: '#my-works', title: 'Работы'}, {url: '#my-responses', title: 'Отзывы'}, {url: '#submit-me', title: 'Связаться'}]
mixin nav(className)
  ul(class="header-nav__ul")
    each item in nav
      li(class="header-nav__li")
        a(class="header-nav__link" href=item.url) #{item.title}


// Social button
- var social = [{url: 'https://www.instagram.com', ico: 'insta'}, {url: 'https://vk.com', ico: 'vk'}, {url: 'https://github.com', ico: 'github'}]
mixin social(className)
  div(class="social-block" id='menu-block')
    each item in social
      a(class="social-block__link" href=item.url target="_blank")
        svg(class=`social-block__fa social-block__fa__${item.ico}`)
          use(xlink:href=`sprite.svg#${item.ico}`)